{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "FortiOS",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#config-blocks"
    },
    {
      "include": "#edit-blocks"
    },
    {
      "include": "#commands"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#private-ip-addresses"
    },
    {
      "include": "#subnet-masks"
    },
    {
      "include": "#global-ip-addresses"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.fortios",
          "match": "#.*$"
        },
        {
          "name": "comment.line.exclamation.fortios",
          "match": "!.*$"
        }
      ]
    },
    "config-blocks": {
      "patterns": [
        {
          "name": "keyword.control.config.fortios",
          "match": "\\b(config)\\b"
        },
        {
          "name": "keyword.control.end.fortios",
          "match": "\\b(end)\\b"
        }
      ]
    },
    "edit-blocks": {
      "patterns": [
        {
          "name": "keyword.control.edit.fortios",
          "match": "\\b(edit)\\b"
        },
        {
          "name": "keyword.control.next.fortios",
          "match": "\\b(next)\\b"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "keyword.other.enable.fortios",
          "match": "\\b(enable)\\b"
        },
        {
          "name": "keyword.other.disable.fortios",
          "match": "\\b(disable)\\b"
        },
        {
          "name": "keyword.other.set.fortios",
          "match": "\\b(set|unset|append|select|delete|move|rename|clone|show)\\b"
        },
        {
          "name": "support.type.fortios",
          "match": "\\b(alertemail|antivirus|application|authentication|automation|aws|azure|casb|certificate|diameter-filter|dlp|dnsfilter|dpdk|emailfilter|endpoint-control|ethernet-oam|extension-controller|file-filter|firewall|ftp-proxy|icap|ips|log|monitoring|nsxt|report|router|rule|sctp-filter|ssh-filter|switch-controller|system|user|videofilter|virtual-patch|voip|vpn|waf|wanopt|web-proxy|webfilter|wireless-controller)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.fortios",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.fortios",
          "match": "\\\\."
        }
      ]
    },
    "private-ip-addresses": {
      "patterns": [
        {
          "name": "variable.parameter",
          "match": "\\b(?:10\\.(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){2}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|172\\.(?:1[6-9]|2[0-9]|3[01])\\.(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){1}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)|192\\.168\\.(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){1}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?))(?:/(?:3[0-2]|[12]?[0-9]))?\\b"
        }
      ]
    },
    "subnet-masks": {
      "patterns": [
        {
          "name": "markup.bold",
          "match": "\\b(?:255\\.255\\.255\\.(?:0|128|192|224|240|248|252|254|255)|255\\.255\\.(?:0|128|192|224|240|248|252|254)\\.0|255\\.(?:0|128|192|224|240|248|252|254)\\.0\\.0|(?:128|192|224|240|248|252|254)\\.0\\.0\\.0)\\b"
        }
      ]
    },
    "global-ip-addresses": {
      "patterns": [
        {
          "name": "markup.italic",
          "match": "\\b(?:8\\.8\\.8\\.8|8\\.8\\.4\\.4|1\\.1\\.1\\.1|203\\.0\\.113\\.[0-9]+|198\\.51\\.100\\.[0-9]+|93\\.184\\.216\\.[0-9]+)(?:/(?:3[0-2]|[12]?[0-9]))?\\b"
        },
        {
          "name": "markup.italic", 
          "match": "\\b(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)(?:/(?:3[0-2]|[12]?[0-9]))?\\b"
        }
      ]
    },
    "numbers": {
      "name": "constant.numeric",
      "match": "\\b(?<!\\.)\\d+(?!\\.)\\b"
    }
  },
  "scopeName": "source.fortios"
}