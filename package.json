{
  "name": "fortios-configuration-helper",
  "displayName": "FortiOS Configuration Helper",
  "description": "Enhanced syntax support and productivity features for FortiOS configuration files",
  "version": "0.1.3",
  "publisher": "fortios-config-studio",
  "license": "MIT",
  "homepage": "https://github.com/testpilot031/fortios-config-studio#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/testpilot031/fortios-config-studio.git"
  },
  "bugs": {
    "url": "https://github.com/testpilot031/fortios-config-studio/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "icon": "icon.png",
  "categories": [
    "Languages",
    "Formatters"
  ],
  "keywords": [
    "fortios",
    "fortigate",
    "firewall",
    "network",
    "configuration"
  ],
  "activationEvents": [
    "onLanguage:fortios"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "fortios",
        "aliases": [
          "FortiOS",
          "fortios"
        ],
        "extensions": [
          ".conf",
          ".cfg"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fortios",
        "scopeName": "source.fortios",
        "path": "./syntaxes/fortios.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "fortios.toggleComment",
        "title": "Toggle Comment",
        "category": "FortiOS"
      },
      {
        "command": "fortios.showConfigurationSummary",
        "title": "Show Configuration Summary",
        "category": "FortiOS"
      },
      {
        "command": "fortios.refreshSummary",
        "title": "Refresh Summary",
        "icon": "$(refresh)"
      },
      {
        "command": "fortios.refreshOutline",
        "title": "Refresh Outline",
        "icon": "$(refresh)"
      },
      {
        "command": "fortios.jumpToLine",
        "title": "Jump to Configuration",
        "icon": "$(go-to-file)"
      },
      {
        "command": "fortios.filterOutline",
        "title": "Filter Configuration Outline",
        "icon": "$(filter)"
      },
      {
        "command": "fortios.clearOutlineFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "fortios.quickFilter",
        "title": "Quick Filter",
        "icon": "$(search)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fortiosExplorer",
          "title": "FortiOS Configuration",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "fortiosExplorer": [
        {
          "id": "fortiosOutline",
          "name": "Configuration Outline",
          "when": "resourceExtname == .conf || resourceExtname == .cfg",
          "canSelectMany": false
        },
        {
          "id": "fortiosSummary",
          "name": "Configuration Summary",
          "when": "resourceExtname == .conf || resourceExtname == .cfg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fortios.refreshSummary",
          "when": "view == fortiosSummary",
          "group": "navigation"
        },
        {
          "command": "fortios.refreshOutline",
          "when": "view == fortiosOutline",
          "group": "navigation"
        },
        {
          "command": "fortios.filterOutline",
          "when": "view == fortiosOutline",
          "group": "navigation"
        },
        {
          "command": "fortios.clearOutlineFilter",
          "when": "view == fortiosOutline",
          "group": "navigation"
        },
        {
          "command": "fortios.quickFilter",
          "when": "view == fortiosOutline",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "fortios.jumpToLine",
          "when": "view == fortiosOutline && viewItem == configBlock",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "fortios.toggleComment",
        "key": "ctrl+/",
        "mac": "cmd+/",
        "when": "editorTextFocus && resourceExtname == .conf || resourceExtname == .cfg"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "update-keywords": "node scripts/update-keywords.js",
    "update-keywords-manual": "node scripts/manual-update.js",
    "update-keywords-from-version": "node scripts/update-keywords-from-version.js",
    "rss-monitor": "node scripts/rss-monitor.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
